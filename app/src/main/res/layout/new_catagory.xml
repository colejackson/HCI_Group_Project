<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/catNameLabel"
        android:text="Name:"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/catName"
        android:layout_alignBottom="@+id/colorLabel"
        android:layout_toRightOf="@+id/colorLabel"
        android:layout_toEndOf="@+id/colorLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colorLabel"
        android:text="colorLabel"
        android:layout_alignTop="@+id/color"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Spinner
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:id="@+id/color"
        android:layout_below="@+id/catNameLabel"
        android:layout_toRightOf="@+id/colorLabel" />

</RelativeLayout>